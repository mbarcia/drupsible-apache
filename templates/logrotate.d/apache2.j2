{{ vhost_base_path }}/{{ webhost }}/logs/error.log {
  compress
  dateext
  maxage 365
  rotate 99
  size=+4096k
  notifempty
  missingok
  create 664 {{ app['user'] }} {{ app['group'] }}
  postrotate
    /etc/init.d/apache2 reload
  endscript
}

