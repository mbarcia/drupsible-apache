# {{ ansible_managed }}

{% if apache_host is defined and apache_host != '' %}
Listen {{ apache_host }}:{{ apache_port }}
{% else %}
Listen {{ apache_port }}
{% endif %}

<IfModule mod_ssl.c>
{% if apache_host is defined and apache_host != '' %}
    Listen {{ apache_host }}:{{ apache_ssl_port }}
{% else %}
    Listen {{ apache_ssl_port }}
{% endif %}

</IfModule>

<IfModule mod_gnutls.c>
{% if apache_host is defined and apache_host != '' %}
    Listen {{ apache_host }}:{{ apache_ssl_port }}
{% else %}
    Listen {{ apache_ssl_port }}
{% endif %}
</IfModule>
